<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= t('title_merchant') %>
    </title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .dashboard {
            max-width: 800px;
        }

        .balance-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .balance-card {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: white;
            padding: 1.5rem;
            border-radius: 0.75rem;
            text-align: center;
        }

        .balance-card.pending {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        }

        .balance-card.total {
            background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
        }

        .balance-value {
            font-size: 2rem;
            font-weight: 700;
        }

        .balance-label {
            font-size: 0.875rem;
            opacity: 0.9;
            margin-top: 0.25rem;
        }

        .section {
            background: #f9fafb;
            padding: 1.5rem;
            border-radius: 0.75rem;
            margin-bottom: 1.5rem;
        }

        .section h3 {
            margin: 0 0 1rem 0;
            color: #374151;
            font-size: 1.125rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .credential-row {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.75rem;
            flex-wrap: wrap;
        }

        .credential-label {
            font-weight: 600;
            color: #374151;
            min-width: 100px;
        }

        .credential-value {
            font-family: monospace;
            background: white;
            padding: 0.5rem 0.75rem;
            border: 1px solid #e5e7eb;
            border-radius: 0.375rem;
            flex: 1;
            word-break: break-all;
            font-size: 0.875rem;
        }

        .credential-value.hidden {
            filter: blur(4px);
            user-select: none;
        }

        .btn-small {
            padding: 0.375rem 0.75rem;
            font-size: 0.75rem;
            border-radius: 0.375rem;
            border: none;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-primary {
            background: #6366f1;
            color: white;
        }

        .btn-primary:hover {
            background: #4f46e5;
        }

        .btn-secondary {
            background: #e5e7eb;
            color: #374151;
        }

        .btn-secondary:hover {
            background: #d1d5db;
        }

        .rate-item {
            display: flex;
            justify-content: space-between;
            padding: 0.75rem;
            background: white;
            border-radius: 0.5rem;
            margin-bottom: 0.5rem;
        }

        .rate-label {
            color: #6b7280;
        }

        .rate-value {
            font-weight: 600;
            font-family: monospace;
        }

        .channel-badge {
            display: inline-block;
            padding: 0.25rem 0.75rem;
            background: #ddd6fe;
            color: #5b21b6;
            border-radius: 1rem;
            font-weight: 600;
            font-size: 0.875rem;
        }

        .copy-success {
            background: #10b981 !important;
        }
    </style>
</head>

<body>
    <div class="container dashboard">
        <div class="lang-switch">
            <a href="?lang=en" class="lang-link <%= currentLang === 'en' ? 'active' : '' %>">English</a>
            <a href="?lang=zh" class="lang-link <%= currentLang === 'zh' ? 'active' : '' %>">ä¸­æ–‡</a>
        </div>

        <div class="logo-container">
            <img src="/images/logo.png" alt="VSPAY Logo" class="logo">
        </div>

        <h1>
            <%= t('header_merchant') %>
        </h1>
        <p class="subtitle">
            <%= t('welcome_user', { username: user.username, role: user.role }) %>
        </p>

        <!-- Balance Cards -->
        <div class="balance-cards">
            <div class="balance-card">
                <div class="balance-value">â‚¹<%= user.balance ? parseFloat(user.balance).toLocaleString() : '0.00' %>
                </div>
                <div class="balance-label">
                    <%= t('available_balance') %>
                </div>
            </div>
            <div class="balance-card pending">
                <div class="balance-value">â‚¹<%= user.pendingBalance ? parseFloat(user.pendingBalance).toLocaleString()
                        : '0.00' %>
                </div>
                <div class="balance-label">
                    <%= t('pending_balance') %>
                </div>
            </div>
            <div class="balance-card total">
                <div class="balance-value">â‚¹<%= ((parseFloat(user.balance) || 0) + (parseFloat(user.pendingBalance) ||
                        0)).toLocaleString() %>
                </div>
                <div class="balance-label">
                    <%= t('total_balance') %>
                </div>
            </div>
        </div>

        <!-- API Credentials -->
        <div class="section">
            <h3>ðŸ”‘ <%= t('api_credentials') %>
            </h3>

            <div class="credential-row">
                <span class="credential-label">
                    <%= t('merchant_id') %>:
                </span>
                <span class="credential-value" id="merchantId">
                    <%= user.apiKey %>
                </span>
                <button class="btn-small btn-primary" onclick="copyToClipboard('merchantId')">
                    <%= t('copy') %>
                </button>
            </div>

            <div class="credential-row">
                <span class="credential-label">
                    <%= t('secret_key') %>:
                </span>
                <span class="credential-value hidden" id="secretKey">
                    <%= user.apiSecret %>
                </span>
                <button class="btn-small btn-secondary" id="toggleSecret" onclick="toggleSecret()">
                    <%= t('show') %>
                </button>
                <button class="btn-small btn-primary" onclick="copyToClipboard('secretKey')">
                    <%= t('copy') %>
                </button>
            </div>
        </div>

        <!-- Channel & Rates -->
        <div class="section">
            <h3>ðŸ“Š <%= t('channel_rates') %>
            </h3>

            <% if (typeof channel !=='undefined' && channel) { %>
                <div style="margin-bottom: 1rem;">
                    <span class="channel-badge">
                        <%= channel.displayName %>
                    </span>
                </div>

                <div class="rate-item">
                    <span class="rate-label">
                        <%= t('payin_rate') %>
                    </span>
                    <span class="rate-value">
                        <%= channel.payinRate %>%
                    </span>
                </div>
                <div class="rate-item">
                    <span class="rate-label">
                        <%= t('payout_rate') %>
                    </span>
                    <span class="rate-value">
                        <%= channel.payoutRate %>%
                    </span>
                </div>
                <div class="rate-item">
                    <span class="rate-label">
                        <%= t('fixed_fee') %>
                    </span>
                    <span class="rate-value">â‚¹<%= channel.payoutFixedFee %></span>
                </div>
                <% } else { %>
                    <p style="color: #6b7280;">
                        <%= t('no_channel') %>
                    </p>
                    <% } %>
        </div>

        <!-- API Documentation Link -->
        <div class="section" style="text-align: center;">
            <h3 style="justify-content: center;">ðŸ“„ <%= t('api_docs') %>
            </h3>
            <p style="color: #6b7280; margin-bottom: 1rem;">Integrate with our API to accept payments</p>
            <a href="/ourapi.txt" target="_blank" class="btn"
                style="display: inline-block; width: auto; background: #6366f1;">
                <%= t('view_docs') %>
            </a>
        </div>

        <a href="/auth/logout" class="btn" style="background-color: #ef4444;">
            <%= t('btn_logout') %>
        </a>
    </div>

    <script>
        let secretVisible = false;

        function toggleSecret() {
            const secretEl = document.getElementById('secretKey');
            const toggleBtn = document.getElementById('toggleSecret');

            secretVisible = !secretVisible;
            secretEl.classList.toggle('hidden', !secretVisible);
            toggleBtn.textContent = secretVisible ? '<%= t("hide") %>' : '<%= t("show") %>';
        }

        function copyToClipboard(elementId) {
            const el = document.getElementById(elementId);
            const text = el.textContent;

            navigator.clipboard.writeText(text).then(() => {
                const btn = el.nextElementSibling.nextElementSibling || el.nextElementSibling;
                const originalText = btn.textContent;
                btn.textContent = '<%= t("copied") %>';
                btn.classList.add('copy-success');

                setTimeout(() => {
                    btn.textContent = '<%= t("copy") %>';
                    btn.classList.remove('copy-success');
                }, 1500);
            });
        }
    </script>
</body>

</html>