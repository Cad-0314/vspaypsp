<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= t('title_2fa_setup') %>
    </title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="container">
        <div class="lang-switch">
            <a href="?lang=en" class="lang-link <%= currentLang === 'en' ? 'active' : '' %>">English</a>
            <a href="?lang=zh" class="lang-link <%= currentLang === 'zh' ? 'active' : '' %>">中文</a>
        </div>

        <h1>
            <%= t('header_secure') %>
        </h1>
        <p class="subtitle">
            <%= t('subtitle_scan') %>
        </p>

        <% if (typeof error !=='undefined' ) { %>
            <div class="alert alert-error">
                <%= error %>
            </div>
            <% } %>

                <div class="qr-code">
                    <img src="<%= qr_code %>" alt="QR Code">
                </div>

                <div class="secret-container"
                    style="display: flex; align-items: center; justify-content: center; gap: 0.5rem; margin-bottom: 1rem;">
                    <span class="secret-code" id="secretCode">
                        <%= secret %>
                    </span>
                    <button type="button" onclick="copySecret()"
                        style="background: none; border: 1px solid #d1d5db; padding: 0.25rem 0.5rem; border-radius: 0.25rem; cursor: pointer;">Copy</button>
                </div>

                <script>
                    function copySecret() {
                        const secret = document.getElementById('secretCode').innerText;
                        navigator.clipboard.writeText(secret).then(() => {
                            alert('Secret copied to clipboard!');
                        }).catch(err => {
                            console.error('Failed to copy text: ', err);
                        });
                    }
                </script>

                <form action="/auth/2fa-setup" method="POST">
                    <div class="form-group">
                        <label for="token">
                            <%= t('label_code') %>
                        </label>
                        <input type="text" id="token" name="token" required placeholder="<%= t('ph_code') %>"
                            autocomplete="off">
                    </div>
                    <button type="submit" class="btn">
                        <%= t('btn_verify_enable') %>
                    </button>
                </form>
    </div>
</body>

</html>