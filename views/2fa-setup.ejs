<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= t('title_2fa_setup') %>
    </title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="container">
        <div class="lang-switch">
            <a href="?lang=en" class="lang-link <%= currentLang === 'en' ? 'active' : '' %>">English</a>
            <a href="?lang=zh" class="lang-link <%= currentLang === 'zh' ? 'active' : '' %>">中文</a>
        </div>

        <div class="logo-container">
            <img src="/images/logo.png" alt="VSPAY Logo" class="logo">
        </div>

        <h1>
            <%= t('header_secure') %>
        </h1>
        <p class="subtitle">
            <%= t('subtitle_scan') %>
        </p>



        <div class="qr-code">
            <img src="<%= qr_code %>" alt="QR Code">
        </div>

        <div class="secret-container"
            style="background: #f3f4f6; padding: 1rem; border-radius: 0.5rem; margin: 1rem 0;">
            <p style="margin: 0 0 0.5rem 0; font-size: 0.875rem; color: #374151;">
                <strong>Secret Key (copy this exactly):</strong>
            </p>
            <div style="display: flex; align-items: center; justify-content: center; gap: 0.5rem;">
                <code id="secretCode"
                    style="background: #fff; padding: 0.5rem 1rem; border-radius: 0.25rem; font-size: 1rem; font-weight: bold; letter-spacing: 0.1em; border: 1px solid #d1d5db;"><%= secret %></code>
                <button type="button" onclick="copySecret()"
                    style="background: #3b82f6; color: white; border: none; padding: 0.5rem 1rem; border-radius: 0.25rem; cursor: pointer; font-size: 0.875rem;">
                    Copy
                </button>
            </div>
        </div>


        <form action="/auth/2fa-setup" method="POST">
            <div class="form-group">
                <label for="token">
                    <%= t('label_code') %>
                </label>
                <input type="text" id="token" name="token" required placeholder="<%= t('ph_code') %>" autocomplete="off"
                    maxlength="6" pattern="[0-9]{6}" inputmode="numeric"
                    style="text-align: center; font-size: 1.5rem; letter-spacing: 0.5em;">
            </div>
            <button type="submit" class="btn">
                <%= t('btn_verify_enable') %>
            </button>
        </form>
    </div>

    <script>
        function copySecret() {
            const secret = document.getElementById('secretCode').innerText;
            navigator.clipboard.writeText(secret).then(() => {
                alert('Secret copied! Now add it to your Authenticator app.');
            }).catch(err => {
                // Fallback for older browsers
                const textArea = document.createElement('textarea');
                textArea.value = secret;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                alert('Secret copied! Now add it to your Authenticator app.');
            });
        }
    </script>
</body>

</html>