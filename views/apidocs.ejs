            <!-- Pay-In: Create -->
            <section id="payin-create">
                <h2 class="method">POST /api/payin/create</h2>
                <p>Generate a payment link to collect funds from a user.</p>

                <table>
                    <thead>
                        <tr>
                            <th>Parameter</th>
                            <th>Type</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><code>orderId</code></td>
                            <td><span class="badge req">Required</span> String</td>
                            <td>Unique Order ID (Max 64 chars).</td>
                        </tr>
                        <tr>
                            <td><code>orderAmount</code></td>
                            <td><span class="badge req">Required</span> Number</td>
                            <td>Amount to collect (Min ₹100).</td>
                        </tr>
                        <tr>
                            <td><code>callbackUrl</code></td>
                            <td><span class="badge req">Required</span> String</td>
                            <td>Webhook URL for payment notifications.</td>
                        </tr>
                        <tr>
                            <td><code>customerName</code></td>
                            <td><span class="badge req">Required</span> String</td>
                            <td>Name of the customer.</td>
                        </tr>
                        <tr>
                            <td><code>customerEmail</code></td>
                            <td><span class="badge req">Required</span> String</td>
                            <td>Email of the customer.</td>
                        </tr>
                        <tr>
                            <td><code>customerPhone</code></td>
                            <td><span class="badge req">Required</span> String</td>
                            <td>Phone number of the customer.</td>
                        </tr>
                        <tr>
                            <td><code>skipUrl</code></td>
                            <td><span class="badge opt">Optional</span> String</td>
                            <td>Redirect URL after successful payment.</td>
                        </tr>
                    </tbody>
                </table>

                <h3>Response</h3>
