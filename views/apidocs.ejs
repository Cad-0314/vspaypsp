    "code": 1,
    "msg": "Order created",
    "data": {
        "orderId": "Your_Order_ID_123",
        "id": "Gateway_Internal_ID",
        "orderAmount": 500,
        "fee": 25,
        "paymentUrl": "https://vspay.vip/pay/ABC-123-XYZ"
    }
}</code></pre>
            </section>

            <!-- Pay-In: Callback -->
