<!DOCTYPE html>
<html lang="<%= currentLang %>">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Payable</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <style>
        :root {
            --primary: #6366f1;
            --primary-dark: #4f46e5;
            --bg-dark: #111827;
            --bg-light: #F3F4F6;
            --text-dark: #1F2937;
            --text-light: #9CA3AF;
            --success: #10B981;
            --danger: #EF4444;
            --warning: #F59E0B;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        body {
            background: var(--bg-light);
            color: var(--text-dark);
            height: 100vh;
            overflow: hidden;
        }

        .dashboard-container {
            display: flex;
            height: 100vh;
            width: 100vw;
        }

        /* Sidebar */
        .sidebar {
            width: 260px;
            background: var(--bg-dark);
            color: white;
            display: flex;
            flex-direction: column;
            transition: transform 0.3s ease;
            flex-shrink: 0;
            z-index: 50;
        }

        .sidebar-header {
            padding: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .logo-text {
            font-size: 1.25rem;
            font-weight: 700;
            letter-spacing: 0.5px;
        }

        .nav-links {
            padding: 1rem;
            flex: 1;
            overflow-y: auto;
        }

        .nav-item {
            padding: 0.875rem 1rem;
            color: var(--text-light);
            text-decoration: none;
            border-radius: 0.5rem;
            margin-bottom: 0.25rem;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-weight: 500;
            transition: all 0.2s;
        }

        .nav-item:hover,
        .nav-item.active {
            background: rgba(255, 255, 255, 0.05);
            color: white;
            transform: translateX(4px);
        }

        .nav-item.active {
            background: var(--primary);
            color: white;
        }

        .nav-item i {
            font-size: 1.25rem;
            width: 24px;
            text-align: center;
        }

        /* Main Content */
        .main-content {
            flex: 1;
            display: flex;
            flex-direction: column;
            position: relative;
            overflow: hidden;
        }

        .top-header {
            background: white;
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
            display: none;
        }

        .mobile-toggle {
            font-size: 1.5rem;
            cursor: pointer;
            color: var(--text-dark);
        }

        .content-scroll {
            flex: 1;
            overflow-y: auto;
            padding: 2rem;
        }

        /* Components */
        h1 {
            font-size: 1.5rem;
            font-weight: 700;
            color: #111827;
            margin-bottom: 0.5rem;
        }

        .subtitle {
            color: #6B7280;
            font-size: 0.875rem;
            margin-bottom: 2rem;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            background: white;
            padding: 1.5rem;
            border-radius: 1rem;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
            border: 1px solid #E5E7EB;
            position: relative;
            overflow: hidden;
        }

        .stat-icon {
            position: absolute;
            right: 1rem;
            top: 1rem;
            font-size: 3rem;
            opacity: 0.1;
            color: var(--primary);
            transform: rotate(-10deg);
        }

        .stat-label {
            font-size: 0.875rem;
            color: #6B7280;
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: #111827;
        }

        .card {
            background: white;
            border-radius: 1rem;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
            border: 1px solid #E5E7EB;
            overflow: hidden;
            margin-bottom: 1.5rem;
        }

        .card-header {
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid #F3F4F6;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .card-title {
            font-weight: 600;
            color: #374151;
            font-size: 1rem;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            padding: 1rem 1.5rem;
            text-align: left;
            border-bottom: 1px solid #F3F4F6;
            font-size: 0.875rem;
        }

        th {
            background: #F9FAFB;
            font-weight: 600;
            color: #6B7280;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.05em;
        }

        .badge {
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .badge-success {
            background: #ECFDF5;
            color: #059669;
        }

        .badge-pending {
            background: #FFFBEB;
            color: #D97706;
        }

        .badge-failed {
            background: #FEF2F2;
            color: #DC2626;
        }

        .btn {
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            font-weight: 500;
            cursor: pointer;
            border: none;
            font-size: 0.875rem;
            transition: 0.2s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-success {
            background: var(--success);
            color: white;
        }

        .btn-danger {
            background: var(--danger);
            color: white;
        }

        .btn-primary {
            background: var(--primary);
            color: white;
        }

        .btn:hover {
            opacity: 0.9;
            transform: translateY(-1px);
        }

        .tab-content {
            display: none;
            animation: slideIn 0.2s cubic-bezier(0.16, 1, 0.3, 1);
        }

        .tab-content.active {
            display: block;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @media (max-width: 1024px) {
            .sidebar {
                position: fixed;
                height: 100%;
                transform: translateX(-100%);
                width: 280px;
                box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
            }

            .sidebar.open {
                transform: translateX(0);
            }

            .top-header {
                display: flex;
            }

            .main-content {
                margin-left: 0;
            }

            .overlay {
                display: none;
                position: fixed;
                inset: 0;
                background: rgba(0, 0, 0, 0.5);
                z-index: 40;
            }

            .overlay.active {
                display: block;
            }
        }
    </style>
</head>

<body>
    <div class="overlay" onclick="toggleSidebar()"></div>
    <div class="dashboard-container">

        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <img src="/images/logo.png" alt="Payable" style="height: 40px; width:auto; border-radius:8px;">
                <span class="logo-text">Payable <span
                        style="font-weight:300; opacity:0.7; color:var(--danger)">ADMIN</span></span>
            </div>

            <nav class="nav-links">
                <div class="nav-item active" onclick="switchTab('dashboard')"><i class="ri-dashboard-3-line"></i>
                    <%= t('nav_dashboard') %>
                </div>
                <div class="nav-item" onclick="switchTab('orders')"><i class="ri-file-list-3-line"></i>
                    <%= t('orders') %>
                </div>
                <div class="nav-item" onclick="switchTab('settlements')"><i class="ri-bank-card-line"></i>
                    <%= t('settlements') %>
                </div>
                <div class="nav-item" onclick="switchTab('merchants')"><i class="ri-team-line"></i>
                    <%= t('merchants') %>
                </div>
                <div class="nav-item" onclick="switchTab('channels')"><i class="ri-server-line"></i>
                    <%= t('channels') %>
                </div>
                <div class="nav-item" onclick="switchTab('broadcast')"><i class="ri-broadcast-line"></i>
                    <%= t('nav_broadcast') %>
                </div>
            </nav>

            <div style="padding: 1rem; border-top: 1px solid rgba(255,255,255,0.1);">
                <a href="/auth/logout" class="btn"
                    style="width:100%; justify-content:center; background:rgba(239, 68, 68, 0.2); color:#FCA5A5;">
                    <i class="ri-logout-box-r-line"></i> Logout
                </a>
            </div>
        </aside>

        <main class="main-content">
            <header class="top-header">
                <div class="mobile-toggle" onclick="toggleSidebar()"><i class="ri-menu-2-fill"></i></div>
                <div style="font-weight:500;">
                    <%= t('header_admin') %>
                </div>
                <div style="display:flex; gap:1rem; align-items:center;">
                    <a href="?lang=en" class="badge"
                        style="background:#f3f4f6; color:inherit; text-decoration:none;">ðŸ‡¬ðŸ‡§ EN</a>
                    <a href="?lang=zh" class="badge"
                        style="background:#f3f4f6; color:inherit; text-decoration:none;">ðŸ‡¨ðŸ‡³ CN</a>
                </div>
            </header>

            <div class="content-scroll">

                <!-- Dashboard -->
                <div id="tab-dashboard" class="tab-content active">
                    <h1>Dashboard Overview</h1>
                    <div class="subtitle">Platform performance metrics.</div>

                    <div class="stats-grid">
                        <div class="stat-card">
                            <i class="ri-hand-coin-line stat-icon" style="color:var(--warning)"></i>
                            <div class="stat-label">Admin Profit</div>
                            <div class="stat-value" style="color: var(--warning);">â‚¹<span id="stat-profit">0.00</span>
                            </div>
                        </div>
                        <div class="stat-card">
                            <i class="ri-wallet-3-line stat-icon" style="color:var(--success)"></i>
                            <div class="stat-label">Total Merchant Balance</div>
                            <div class="stat-value" style="color: var(--success);">â‚¹<span
                                    id="stat-merchant-balance">0.00</span></div>
                        </div>
                        <div class="stat-card">
                            <i class="ri-arrow-left-down-line stat-icon"></i>
                            <div class="stat-label">Today's PayIn Volume</div>
                            <div class="stat-value">â‚¹<span id="stat-today-payin">0.00</span></div>
                        </div>
                        <div class="stat-card">
                            <i class="ri-store-2-line stat-icon"></i>
                            <div class="stat-label">Merchants</div>
                            <div class="stat-value"><span id="stat-merchants">0</span></div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Transaction Volume</div>
                        </div>
                        <div style="padding: 1.5rem; height: 350px;">
                            <canvas id="adminChart"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Orders -->
                <div id="tab-orders" class="tab-content">
                    <h1>Global Transactions</h1>
                    <div class="subtitle">Search and view all platform transactions.</div>
                    <div class="card">
                        <div style="padding: 1.5rem; border-bottom: 1px solid #F3F4F6;">
                            <div
                                style="display:grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap:1rem;">
                                <input type="text" id="order-search" placeholder="Search Order ID / UTR..."
                                    class="form-control"
                                    style="background:#F9FAFB; border:1px solid #E5E7EB; padding:0.5rem; border-radius:0.5rem;">
                                <select id="order-filter-type" class="form-control"
                                    style="padding:0.5rem; border:1px solid #E5E7EB; border-radius:0.5rem;">
                                    <option value="">All Types</option>
                                    <option value="payin">Payin</option>
                                    <option value="payout">Payout</option>
                                </select>
                                <select id="order-filter-status" class="form-control"
                                    style="padding:0.5rem; border:1px solid #E5E7EB; border-radius:0.5rem;">
                                    <option value="">All Status</option>
                                    <option value="pending">Pending</option>
                                    <option value="success">Success</option>
                                    <option value="failed">Failed</option>
                                </select>
                                <input type="date" id="order-filter-start" class="form-control"
                                    style="padding:0.5rem; border:1px solid #E5E7EB; border-radius:0.5rem;">
                                <input type="date" id="order-filter-end" class="form-control"
                                    style="padding:0.5rem; border:1px solid #E5E7EB; border-radius:0.5rem;">
                                <button onclick="loadGlobalOrders()" class="btn btn-primary"
                                    style="justify-content:center;">Filter</button>
                            </div>
                        </div>
                        <table id="global-orders-table">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Merchant</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                    <th>Updated</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="6">Loading...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div id="orders-pagination"
                        style="display:flex; justify-content:flex-end; gap:0.5rem; margin-top:1rem; align-items:center;">
                    </div>
                </div>

                <!-- Settlements -->
                <div id="tab-settlements" class="tab-content">
                    <h1>Settlement Requests</h1>
                    <div class="subtitle">Pending merchant withdrawal requests.</div>
                    <div class="card">
                        <div
                            style="padding: 1rem; border-bottom: 1px solid #F3F4F6; display:flex; gap:1rem; flex-wrap:wrap; align-items:center;">
                            <input type="text" id="settle-search" placeholder="Search Settlement ID / Merchant..."
                                style="flex:1; min-width:200px; padding:0.5rem; border:1px solid #E5E7EB; border-radius:0.5rem;">
                            <select id="settle-filter-status" class="form-control"
                                style="max-width:150px; padding:0.5rem; border:1px solid #E5E7EB; border-radius:0.5rem;">
                                <option value="">All Status</option>
                                <option value="pending">Pending</option>
                                <option value="completed">Completed</option>
                                <option value="rejected">Rejected</option>
                            </select>
                            <select id="settle-filter-type" class="form-control"
                                style="max-width:120px; padding:0.5rem; border:1px solid #E5E7EB; border-radius:0.5rem;">
                                <option value="">All Types</option>
                                <option value="bank">Bank</option>
                                <option value="usdt">USDT</option>
                            </select>
                            <button onclick="loadSettlements()" class="btn btn-primary"
                                style="padding:0.5rem 1rem;">Filter</button>
                        </div>
                        <table id="settlements-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Merchant</th>
                                    <th>Type</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                    <th>Updated</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="8">Loading...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div id="settlements-pagination"
                        style="display:flex; justify-content:flex-end; gap:0.5rem; margin-top:1rem; align-items:center;">
                    </div>
                </div>

                <!-- Merchants -->
                <div id="tab-merchants" class="tab-content">
                    <div
                        style="display: flex; justify-content: space-between; align-items:center; margin-bottom: 1rem;">
                        <div>
                            <h1>Merchants</h1>
                            <div class="subtitle" style="margin-bottom:0">Manage registered merchants.</div>
                        </div>
                        <button class="btn btn-success" onclick="openMerchantModal()"><i class="ri-add-line"></i>
                            Add
                            Merchant</button>
                    </div>
                    <div class="card">
                        <div style="padding: 1rem; border-bottom: 1px solid #F3F4F6; display:flex; gap:1rem;">
                            <input type="text" id="merchant-search" placeholder="Search by Username or API Key..."
                                style="flex:1; padding: 0.5rem; border: 1px solid #E5E7EB; border-radius: 0.5rem;"
                                onkeyup="searchMerchants()">
                            <select id="merchant-filter-status"
                                style="padding: 0.5rem; border: 1px solid #E5E7EB; border-radius: 0.5rem;"
                                onchange="loadMerchants()">
                                <option value="">All Status</option>
                                <option value="true">Active Only</option>
                                <option value="false">Inactive Only</option>
                            </select>
                        </div>
                        <table id="merchants-table">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>API Key</th>
                                    <th>Channel</th>
                                    <th>Balance</th>
                                    <th>Rates</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="7">Loading...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Channels -->
                <div id="tab-channels" class="tab-content">
                    <h1>Channels</h1>
                    <div class="subtitle" style="margin-bottom:0">Configure upstream payment channels.</div>
                    <button class="btn btn-primary" onclick="analyzeChannels()" id="btn-analyze"
                        style="float:right; margin-top:-2rem;">
                        <i class="ri-pulse-line"></i> Check Health
                    </button>
                    <br style="clear:both; margin-bottom:1rem;">
                    <div class="card">
                        <table id="channels-table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Payin %</th>
                                    <th>Payout %</th>
                                    <th>Fixed â‚¹</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>

                <!-- Broadcast -->
                <div id="tab-broadcast" class="tab-content">
                    <h1>Broadcast Message</h1>
                    <div class="subtitle">Send system-wide announcements.</div>
                    <div class="card" style="padding: 2rem; max-width: 600px;">
                        <textarea id="broadcast-msg" rows="4"
                            style="width: 100%; border: 1px solid #E5E7EB; border-radius:0.5rem; padding: 1rem; margin-bottom: 1rem; background:#F9FAFB; font-family:inherit;"
                            placeholder="Type message..."></textarea>
                        <button class="btn btn-primary" onclick="sendBroadcast()"><i class="ri-send-plane-fill"></i>
                            Send Broadcast</button>
                    </div>
                </div>

            </div>
        </main>
    </div>

    <!-- Settlement Action Modal -->
    <div id="settleActionModal"
        style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); backdrop-filter:blur(4px); align-items: center; justify-content: center; z-index:100;">
        <div
            style="background: white; padding: 2rem; width: 450px; border-radius: 1rem; box-shadow: 0 20px 25px -5px rgba(0,0,0,0.1);">
            <h3>Process Settlement</h3>
            <input type="hidden" id="settle-id">
            <div style="margin: 1.5rem 0;">
                <label style="display:block; margin-bottom:0.5rem; font-weight:500; font-size:0.875rem;">UTR /
                    Transaction ID</label>
                <input type="text" id="settle-utr"
                    style="width: 100%; padding: 0.75rem; border: 1px solid #E5E7EB; border-radius:0.5rem;">
            </div>
            <div style="margin-bottom: 1.5rem;">
                <label style="display:block; margin-bottom:0.5rem; font-weight:500; font-size:0.875rem;">Notes</label>
                <textarea id="settle-notes"
                    style="width: 100%; padding: 0.75rem; border: 1px solid #E5E7EB; border-radius:0.5rem;"></textarea>
            </div>
            <div style="display: flex; gap: 1rem;">
                <button class="btn btn-success" onclick="processSettlement('completed')"
                    style="flex: 1; justify-content:center;">Approve</button>
                <button class="btn btn-danger" onclick="processSettlement('rejected')"
                    style="flex: 1; justify-content:center;">Reject</button>
                <button class="btn" onclick="document.getElementById('settleActionModal').style.display='none'"
                    style="flex: 1; justify-content:center; background:#F3F4F6;">Cancel</button>
            </div>
            <div style="margin-top: 1.5rem; padding-top: 1rem; border-top: 1px solid #F3F4F6;">
                <label
                    style="display:block; margin-bottom:0.5rem; font-weight:600; font-size:0.875rem; color:var(--danger);">2FA
                    TOTP Code (Required)</label>
                <input type="text" id="settle-totp" placeholder="Enter 6-digit code"
                    style="width: 100%; padding: 0.75rem; border: 2px solid #FEE2E2; border-radius:0.5rem; text-align:center; font-weight:bold; letter-spacing:4px;">
            </div>
        </div>
    </div>

    <!-- Add Merchant Modal -->
    <div id="merchantModal"
        style="display:none; position: fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.5); backdrop-filter:blur(4px); align-items:center; justify-content:center; z-index:100;">
        <div
            style="background:white; padding:2rem; width:500px; border-radius:1rem; box-shadow: 0 20px 25px -5px rgba(0,0,0,0.1);">
            <h3 style="margin-bottom:1.5rem;">Add/Edit Merchant</h3>
            <form id="merchantForm">
                <input type="hidden" id="m-id">
                <input type="text" id="m-username" placeholder="Username"
                    style="width:100%; margin-bottom:0.75rem; padding:0.75rem; border:1px solid #E5E7EB; border-radius:0.5rem;">
                <input type="password" id="m-password" placeholder="Password (optional, default: username@777)"
                    style="width:100%; margin-bottom:0.75rem; padding:0.75rem; border:1px solid #E5E7EB; border-radius:0.5rem;">
                <select id="m-channel"
                    style="width:100%; margin-bottom:0.75rem; padding:0.75rem; border:1px solid #E5E7EB; border-radius:0.5rem;">
                    <option value="hdpay">HDPay</option>
                    <option value="x2">X2</option>
                    <option value="payable">Payable</option>
                    <option value="yellow">Yellow</option>
                    <option value="upi super">UPI Super</option>
                </select>
                <input type="text" id="m-telegramGroup" placeholder="Telegram Group ID (e.g. -100123456789)"
                    style="width:100%; margin-bottom:0.75rem; padding:0.75rem; border:1px solid #E5E7EB; border-radius:0.5rem;">
                <div style="display:grid; grid-template-columns: 1fr 1fr; gap:0.75rem;">
                    <input type="number" id="m-payin" placeholder="Payin %" value="5"
                        style="padding:0.75rem; border:1px solid #E5E7EB; border-radius:0.5rem;">
                    <input type="number" id="m-payout" placeholder="Payout %" value="3"
                        style="padding:0.75rem; border:1px solid #E5E7EB; border-radius:0.5rem;">
                    <input type="number" id="m-fixed" placeholder="Fixed â‚¹" value="6"
                        style="padding:0.75rem; border:1px solid #E5E7EB; border-radius:0.5rem;">
                    <input type="number" id="m-usdt" placeholder="USDT %" value="0"
                        style="padding:0.75rem; border:1px solid #E5E7EB; border-radius:0.5rem;">
                </div>

                <!-- Suspension & Status -->
                <div style="margin-top:1rem; display:grid; grid-template-columns: 1fr 1fr; gap:0.75rem;">
                    <label style="display:flex; align-items:center; gap:0.5rem; font-size:0.875rem;">
                        <input type="checkbox" id="m-isActive" checked> Account Active
                    </label>
                    <label style="display:flex; align-items:center; gap:0.5rem; font-size:0.875rem;">
                        <input type="checkbox" id="m-canPayin" checked> Allow Payin
                    </label>
                    <label style="display:flex; align-items:center; gap:0.5rem; font-size:0.875rem;">
                        <input type="checkbox" id="m-canPayout" checked> Allow Payout
                    </label>
                </div>

                <!-- TOTP for Delete -->
                <div id="m-totp-container"
                    style="margin-top:1.5rem; padding-top:1rem; border-top: 1px solid #F3F4F6; display:none;">
                    <label
                        style="display:block; margin-bottom:0.5rem; font-weight:600; font-size:0.875rem; color:var(--danger);">2FA
                        TOTP Code (Required for Delete)</label>
                    <input type="text" id="m-totp" placeholder="Enter 6-digit code"
                        style="width: 100%; padding: 0.75rem; border: 2px solid #FEE2E2; border-radius:0.5rem; text-align:center; font-weight:bold; letter-spacing:4px;">
                </div>

                <div style="margin-top: 1.5rem; display:flex; gap: 1rem; flex-wrap:wrap;">
                    <button type="button" class="btn btn-primary" onclick="saveMerchant()"
                        style="flex:1; min-width:120px; justify-content:center;">Save</button>
                    <button type="button" id="btn-delete-merchant" class="btn btn-danger"
                        onclick="deleteMerchantAction()"
                        style="flex:1; min-width:120px; justify-content:center; display:none;">Delete</button>
                    <button type="button" class="btn"
                        onclick="document.getElementById('merchantModal').style.display='none'"
                        style="flex:1; min-width:120px; justify-content:center; background:#F3F4F6;">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        let merchantSearchTimeout = null;

        function showToast(message, type = 'success') {
            Toastify({
                text: message,
                duration: 3000,
                close: true,
                gravity: "top",
                position: "right",
                backgroundColor: type === 'error' ? "#EF4444" : "#10B981",
                stopOnFocus: true
            }).showToast();
        }

        function renderPagination(paging, containerId, clickActionTemplate) {
            const container = document.getElementById(containerId);
            // Safety check: if container doesn't exist, log warning but don't crash
            if (!container) {
                console.warn(`Pagination container not found: ${containerId}`);
                return;
            }
            if (!paging || paging.pages <= 1) { container.innerHTML = ''; return; }


            const prevAction = clickActionTemplate.replace('{page}', paging.page - 1);
            const nextAction = clickActionTemplate.replace('{page}', paging.page + 1);

            container.innerHTML = `
                <span style="font-size:0.875rem; color:grey; margin-right:auto;">Page ${paging.page} of ${paging.pages} (${paging.total} items)</span>
                <button class="btn" style="padding:0.25rem 0.75rem; background:${paging.page > 1 ? 'white' : '#F3F4F6'}; border:1px solid #E5E7EB;" 
                    onclick="${prevAction}" ${paging.page <= 1 ? 'disabled' : ''}><i class="ri-arrow-left-s-line"></i></button>
                <button class="btn" style="padding:0.25rem 0.75rem; background:${paging.page < paging.pages ? 'white' : '#F3F4F6'}; border:1px solid #E5E7EB;" 
                    onclick="${nextAction}" ${paging.page >= paging.pages ? 'disabled' : ''}><i class="ri-arrow-right-s-line"></i></button>
            `;
        }
        // ... Logic remains identical, just UI structure ...
        switchTab('dashboard');
        loadStats();

        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('open');
            document.querySelector('.overlay').classList.toggle('active');
        }

        function switchTab(tab) {
            document.querySelectorAll('.tab-content').forEach(el => el.classList.remove('active'));
            document.getElementById('tab-' + tab).classList.add('active');
            document.querySelectorAll('.nav-item').forEach(el => el.classList.remove('active'));
            if (window.innerWidth <= 1024) toggleSidebar();
            event && event.currentTarget.classList.add('active');

            if (tab === 'orders') loadGlobalOrders();
            if (tab === 'settlements') loadSettlements();
            if (tab === 'merchants') loadMerchants();
            if (tab === 'channels') loadChannels();
        }

        async function loadStats() {
            try {
                const res = await fetch('/admin/api/stats');
                const data = await res.json();
                if (data.success) {
                    const s = data.stats;
                    document.getElementById('stat-profit').innerText = s.adminBalance.toFixed(2);
                    document.getElementById('stat-merchant-balance').innerText = s.totalMerchantBalance.toFixed(2);
                    document.getElementById('stat-today-payin').innerText = s.today.payin.toFixed(2);
                    document.getElementById('stat-merchants').innerText = s.merchantCount;
                }

                const ctx = document.getElementById('adminChart').getContext('2d');
                const cRes = await fetch('/admin/api/chart');
                const cData = await cRes.json();
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: cData.labels,
                        datasets: [
                            { label: 'Payin Volume', data: cData.payinData, backgroundColor: '#6366f1', borderRadius: 4 },
                            { label: 'Payout Volume', data: cData.payoutData, backgroundColor: '#ef4444', borderRadius: 4 }
                        ]
                    },
                    options: { responsive: true, maintainAspectRatio: false, scales: { x: { grid: { display: false } } } }
                });
            } catch (e) { console.error(e); }
        }

        async function loadGlobalOrders(page = 1) {
            const search = document.getElementById('order-search').value;
            const startDate = document.getElementById('order-filter-start').value;
            const endDate = document.getElementById('order-filter-end').value;
            const status = document.getElementById('order-filter-status').value;

            let url = `/admin/api/orders?limit=20&page=${page}`;
            if (search) url += `&search=${search}`;
            if (status) url += `&status=${status}`;
            if (startDate) url += `&startDate=${startDate}`;
            if (endDate) url += `&endDate=${endDate}`;

            const res = await fetch(url);
            const data = await res.json();
            const tbody = document.getElementById('global-orders-table').querySelector('tbody');

            if (data.success && data.orders.length > 0) {
                tbody.innerHTML = data.orders.map(o => `
                    <tr>
                        <td title="${o.id}"><small style="font-family:monospace;">${o.orderId}</small></td>
                        <td>${o.merchant?.username || 'N/A'}</td>
                        <td>â‚¹${o.amount}</td>
                        <td><span class="badge badge-${o.status}">${o.status}</span></td>
                        <td>${new Date(o.createdAt).toLocaleString()}</td>
                        <td>${new Date(o.updatedAt).toLocaleString()}</td>
                    </tr>
                `).join('');
                renderPagination(data.pagination, 'orders-pagination', `loadGlobalOrders({page})`);
            } else {
                tbody.innerHTML = '<tr><td colspan="6" style="text-align: center; color: #9ca3af; padding:2rem;">No orders found</td></tr>';
                document.getElementById('orders-pagination').innerHTML = '';
            }
        }

        async function loadSettlements(page = 1) {
            const status = document.getElementById('settle-filter-status').value;
            const type = document.getElementById('settle-filter-type').value;
            const search = document.getElementById('settle-search').value;

            let url = `/admin/api/settlements?page=${page}`;
            if (status) url += `&status=${status}`;
            if (type) url += `&type=${type}`;
            if (search) url += `&search=${search}`;

            const res = await fetch(url);
            const data = await res.json();
            const tbody = document.getElementById('settlements-table').querySelector('tbody');

            if (data.success && data.settlements.length > 0) {
                tbody.innerHTML = data.settlements.map(s => `
                    <tr>
                        <td style="font-family:monospace;">${s.id}</td>
                        <td>${s.merchant?.username || 'N/A'}</td>
                        <td><span class="badge" style="background:#E0E7FF; color:#4338CA;">${s.type.toUpperCase()}</span></td>
                        <td>â‚¹${s.amount}</td>
                        <td><span class="badge badge-${s.status}">${s.status}</span></td>
                        <td>${new Date(s.createdAt).toLocaleString()}</td>
                        <td>${new Date(s.updatedAt).toLocaleString()}</td>
                        <td>
                            ${s.status === 'pending' ?
                        `<button class="btn btn-primary" style="padding: 0.25rem 0.5rem; font-size: 0.75rem;" onclick="openSettleAction('${s.id}')">Process</button>` :
                        `<small style="color:grey;">Processed</small>`}
                        </td>
                    </tr>
                `).join('');
                renderPagination(data.pagination, 'settlements-pagination', `loadSettlements({page})`);
            } else {
                tbody.innerHTML = '<tr><td colspan="8" style="text-align: center; color: #9ca3af; padding:2rem;">No settlements found</td></tr>';
                document.getElementById('settlements-pagination').innerHTML = '';
            }
        }

        function openSettleAction(id) {
            document.getElementById('settle-id').value = id;
            document.getElementById('settle-totp').value = '';
            document.getElementById('settleActionModal').style.display = 'flex';
        }

        async function processSettlement(status) {
            const id = document.getElementById('settle-id').value;
            const utr = document.getElementById('settle-utr').value;
            const notes = document.getElementById('settle-notes').value;

            const totpCode = document.getElementById('settle-totp').value;
            if (!totpCode) return showToast('TOTP code required', 'error');

            try {
                const res = await fetch(`/admin/api/settlements/${id}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ status, utr, notes, totpCode })
                });
                const data = await res.json();
                if (data.success) {
                    showToast(`Settlement ${status} successfully`);
                    document.getElementById('settleActionModal').style.display = 'none';
                    loadSettlements();
                } else {
                    showToast(data.error, 'error');
                }
            } catch (e) {
                showToast('Error processing settlement', 'error');
            }
        }

        function searchMerchants() {
            clearTimeout(merchantSearchTimeout);
            merchantSearchTimeout = setTimeout(() => {
                loadMerchants(1);
            }, 300);
        }

        async function loadMerchants(page = 1) {
            const search = document.getElementById('merchant-search').value;
            const isActive = document.getElementById('merchant-filter-status').value;

            let url = `/admin/api/merchants?page=${page}&search=${search}`;
            if (isActive) url += `&isActive=${isActive}`;

            const res = await fetch(url);
            const data = await res.json();
            const tbody = document.getElementById('merchants-table').querySelector('tbody');

            if (data.success && data.merchants.length > 0) {
                tbody.innerHTML = data.merchants.map(m => `
                    <tr>
                        <td style="font-weight:500;">${m.username}</td>
                        <td><small style="font-family:monospace; background:#F3F4F6; padding:2px 6px; border-radius:4px;">${m.apiKey || '-'}</small></td>
                        <td>${m.assignedChannel || 'None'}</td>
                        <td>â‚¹${parseFloat(m.balance).toFixed(2)}</td>
                        <td>
                            <div style="font-size:0.7rem; color:#6B7280; line-height:1.2;">
                                Payin: ${JSON.parse(m.channel_rates || '{}').payinRate || 0}%<br>
                                Payout: ${JSON.parse(m.channel_rates || '{}').payoutRate || 0}%
                            </div>
                        </td>
                        <td>
                            <div style="display:flex; gap:0.25rem;">
                                ${m.isActive ? '<i class="ri-checkbox-circle-fill" style="color:var(--success)" title="Account Active"></i>' : '<i class="ri-close-circle-fill" style="color:var(--danger)" title="Account Suspended"></i>'}
                                ${m.canPayin ? '<i class="ri-arrow-left-down-line" style="color:var(--success)" title="Payin Enabled"></i>' : '<i class="ri-arrow-left-down-line" style="color:var(--danger); text-decoration:line-through" title="Payin Disabled"></i>'}
                                ${m.canPayout ? '<i class="ri-arrow-right-up-line" style="color:var(--success)" title="Payout Enabled"></i>' : '<i class="ri-arrow-right-up-line" style="color:var(--danger); text-decoration:line-through" title="Payout Disabled"></i>'}
                            </div>
                        </td>
                        <td style="display:flex; gap:0.5rem;">
                            <button class="btn" style="padding:0.25rem 0.5rem;" onclick="editMerchant('${m.id}')"><i class="ri-edit-line"></i></button>
                        </td>
                    </tr>
                `).join('');
                renderPagination(data.pagination, 'merchants-pagination', `loadMerchants({page})`);
            } else {
                tbody.innerHTML = '<tr><td colspan="7" style="text-align: center; color: #9ca3af; padding:2rem;">No merchants found</td></tr>';
                document.getElementById('merchants-pagination').innerHTML = '';
            }
        }

        async function editMerchant(id) {
            const res = await fetch(`/admin/api/merchants/${id}`);
            const data = await res.json();
            if (!data.success) return alert('Failed to load merchant');

            const m = data.merchant;
            document.getElementById('m-id').value = m.id;
            document.getElementById('m-username').value = m.username;
            document.getElementById('m-password').value = '';
            document.getElementById('m-channel').value = m.assignedChannel || '';
            document.getElementById('m-telegramGroup').value = m.telegramGroupId || '';

            const rates = JSON.parse(m.channel_rates || '{}');
            document.getElementById('m-payin').value = rates.payinRate || 5;
            document.getElementById('m-payout').value = rates.payoutRate || 3;
            document.getElementById('m-fixed').value = rates.payoutFixedFee || 6;
            document.getElementById('m-usdt').value = rates.usdtRate || 100;

            document.getElementById('m-isActive').checked = m.isActive;
            document.getElementById('m-canPayin').checked = m.canPayin;
            document.getElementById('m-canPayout').checked = m.canPayout;

            document.getElementById('btn-delete-merchant').style.display = 'block';
            document.getElementById('m-totp-container').style.display = 'block';
            openMerchantModal();
        }

        function openMerchantModal() {
            document.getElementById('m-totp').value = '';
            document.getElementById('merchantModal').style.display = 'flex';
        }

        async function saveMerchant() {
            const id = document.getElementById('m-id').value;
            const body = {
                username: document.getElementById('m-username').value,
                assignedChannel: document.getElementById('m-channel').value,
                telegramGroupId: document.getElementById('m-telegramGroup').value,
                payinRate: document.getElementById('m-payin').value,
                payoutRate: document.getElementById('m-payout').value,
                payoutFixedFee: document.getElementById('m-fixed').value,
                usdtRate: document.getElementById('m-usdt').value,
                isActive: document.getElementById('m-isActive').checked,
                canPayin: document.getElementById('m-canPayin').checked,
                canPayout: document.getElementById('m-canPayout').checked
            };

            const p = document.getElementById('m-password').value;
            if (p) body.password = p;

            const res = await fetch(id ? `/admin/api/merchants/${id}` : '/admin/api/merchants', {
                method: id ? 'PUT' : 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(body)
            });

            const data = await res.json();
            if (data.success) {
                showToast('Merchant saved successfully');
                document.getElementById('merchantModal').style.display = 'none';
                loadMerchants();
                document.getElementById('m-id').value = '';
                document.getElementById('merchantForm').reset();
                document.getElementById('btn-delete-merchant').style.display = 'none';
            } else {
                showToast(data.error || 'Failed to save', 'error');
            }
        }

        async function deleteMerchantAction() {
            const id = document.getElementById('m-id').value;
            const totpCode = document.getElementById('m-totp').value;
            if (!id) return;
            if (!totpCode) return showToast('TOTP code required to delete', 'error');
            if (!confirm('Are you sure you want to delete this merchant? This action cannot be undone.')) return;

            const res = await fetch(`/admin/api/merchants/${id}`, {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ totpCode })
            });
            const data = await res.json();
            if (data.success) {
                showToast('Merchant deleted successfully');
                document.getElementById('merchantModal').style.display = 'none';
                loadMerchants();
            } else {
                showToast(data.error || 'Failed to delete', 'error');
            }
        }

        async function sendBroadcast() {
            const message = document.getElementById('broadcast-msg').value;
            await fetch('/admin/api/broadcast', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ message })
            });
            showToast('Broadcast sent!');
        }

        async function loadChannels() {
            const res = await fetch('/admin/api/channels');
            const data = await res.json();
            document.getElementById('channels-table').querySelector('tbody').innerHTML = data.channels.map(c => `
                <tr>
                    <td style="font-weight:600;">${c.displayName}</td>
                    <td>${c.payinRate}%</td>
                    <td>${c.payoutRate}%</td>
                    <td>â‚¹${c.payoutFixedFee}</td>
                    <td>${c.isActive ? '<span class="badge badge-success">Active</span>' : '<span class="badge badge-failed">Inactive</span>'}</td>
                     <td><button class="btn" style="padding:0.25rem 0.5rem;"><i class="ri-settings-4-line"></i></button></td>
                </tr>
             `).join('');
        }

        async function analyzeChannels() {
            const btn = document.getElementById('btn-analyze');
            const originalText = btn.innerHTML;
            btn.disabled = true;
            btn.innerHTML = '<i class="ri-loader-4-line ri-spin"></i> Checking...';

            showToast('Starting channel analysis. This may take 10-20 seconds.', 'info');

            try {
                const res = await fetch('/admin/api/channels/analyze', { method: 'POST' });
                const data = await res.json();

                if (data.success) {
                    let msg = 'Analysis Complete:\n';
                    data.results.forEach(r => {
                        msg += `${r.channel}: ${r.success ? 'âœ… OK' : 'âŒ ' + (r.error || 'Failed')} \n`;
                    });
                    alert(msg); // Using alert for simplicity as modal is not set up
                } else {
                    showToast('Analysis failed to run', 'error');
                }
            } catch (e) {
                showToast('Error running analysis', 'error');
            } finally {
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        }
    </script>
</body>

</html>