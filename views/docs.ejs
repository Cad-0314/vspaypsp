                <div class="endpoint"><span class="method">POST</span> /api/payout/bank</div>
                <table>
                    <thead>
                        <tr>
                            <th>参数</th>
                            <th>类型</th>
                            <th>说明</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>orderId</td>
                            <td>String</td>
                            <td>唯一交易号</td>
                        </tr>
                        <tr>
