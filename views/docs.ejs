                <h2>
                    <span class="lang-en">Check Balance</span>
                    <span class="lang-zh hidden">查询余额</span>
                </h2>
                <div class="method post">POST /api/balance/query</div>
                <p>Body: <code>{}</code> (Empty object)</p>

                <pre><code>{
    "code": 1,
    "msg": "Success",
    "data": {
        "availableAmount": 10050.00,
        "pendingAmount": 0,
        "totalAmount": 10050.00
    }
}</code></pre>
            </section>

        </div>
    </main>

    <script>
        function setLang(lang) {
            document.documentElement.lang = lang;

            // Toggle Content
            if (lang === 'zh') {
                document.querySelectorAll('.lang-en').forEach(el => el.classList.add('hidden'));
                document.querySelectorAll('.lang-zh').forEach(el => el.classList.remove('hidden'));
            } else {
                document.querySelectorAll('.lang-zh').forEach(el => el.classList.add('hidden'));
                document.querySelectorAll('.lang-en').forEach(el => el.classList.remove('hidden'));
            }

            // Toggle Buttons
            document.querySelectorAll('.lang-btn').forEach(btn => btn.classList.remove('active'));
            document.querySelector(`.lang-btn[onclick="setLang('${lang}')"]`).classList.add('active');

            // Save preference (optional, but requested implicitely)
            document.cookie = `lang=${lang}; path=/`;
        }

        // Init from URL or existing
        const urlParams = new URLSearchParams(window.location.search);
        const lang = urlParams.get('lang') || '<%= currentLang %>' || 'en';
        setLang(lang);
    </script>
</body>

