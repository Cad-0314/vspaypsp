            <% } else { %>
                <!-- ENGLISH CONTENT -->
                <section id="intro">
                    <h1>API Documentation</h1>
                    <p>Welcome to the Payable Payment Gateway API v2.1. This documentation provides a comprehensive
                        guide to integrating our secure payment solutions.</p>
                    <div class="alert">
                        <strong>Version:</strong> 2.1 | <strong>Base URL:</strong> https://payable.firestars.co
                    </div>
