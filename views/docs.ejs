                <table>
                    <thead>
                        <tr>
                            <th>Param</th>
                            <th>Type</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>orderId</td>
                            <td>String <span class="required">*</span></td>
                            <td>Unique ID / 唯一交易号</td>
                        </tr>
                        <tr>
                            <td>amount</td>
                            <td>Number <span class="required">*</span></td>
                            <td>Amount / 金额</td>
                        </tr>
                        <tr>
                            <td>account</td>
                            <td>String <span class="required">*</span></td>
                            <td>Bank Account / 银行账号</td>
                        </tr>
                        <tr>
                            <td>ifsc</td>
                            <td>String <span class="required">*</span></td>
                            <td>IFSC Code / IFSC代码</td>
                        </tr>
                        <tr>
                            <td>personName</td>
                            <td>String <span class="required">*</span></td>
                            <td>Account Name / 户名</td>
                        </tr>
